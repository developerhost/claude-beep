{
  "name": "claude-beep",
  "version": "1.0.0",
  "description": "A wrapper for Claude Code that plays a beep sound when tasks complete",
  "main": "dist/index.js",
  "bin": {
    "claude-beep": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "claude",
    "cli",
    "beep",
    "notification",
    "ai",
    "coding"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "beeper": "^3.0.0",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/node-notifier": "^8.0.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
